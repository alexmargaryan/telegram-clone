{
  "extends": "@telegram-clone/typescript-config/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "declaration": false
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}